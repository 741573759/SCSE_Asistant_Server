/* pages/more/grade/grade.wxss */
page{
  
}
.header{
  text-align: center;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}
.icon{
  padding: 80rpx 0 50rpx 0;
}
.selectbox{
  width: 90%;
  height: 100rpx;
  margin: auto;
  background: rgba(182, 178, 178, 0.24);
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  box-shadow: #6173a1 0 0rpx 2rpx;
}
.buttonbox{
  display: flex;
  justify-content: center;
  position: relative;
  top: -35rpx;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  text-align: center;
  border-radius: 8rpx;
  overflow: hidden;
  background: white;
  box-shadow: #6173a1 0 0 2rpx;
}
.button{
  width:50%;
}
.selectbutton{
  background: #6173a1;
  color: white;
}
.body{
  width: 90%;
  min-height: 800rpx;
  margin:0 auto 100rpx;
  text-align: center;
  overflow: hidden;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  box-shadow: #6173a1 0 1rpx 1rpx;
}

.table{
  padding-bottom: 50rpx;
  background: rgb(255, 255, 255);
}

.th{
  font-size: 15px;
  color :#003973;
  padding: 25rpx 0;
  background: rgba(97, 115, 161, 0.26)
}

.tr:nth-of-type(2n){
  background:  rgba(182, 178, 178, 0.24);
  display: flex;
  padding: 8rpx;
}
.tr:nth-of-type(2n+1){
  background: rgba(255, 255, 255, 0.616);
  display: flex;
  padding: 8rpx;
}
.tr_msg{
color: rgb(20, 161, 243);
  background: white;
}
.td{
  word-break: break-all;
}
.td:nth-of-type(1){
  width: 60%;
  text-align: left;
  padding-left: 20rpx;
}
.td:nth-of-type(2){
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.td:nth-of-type(3){
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.td_in{
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.code{
  width: 30%;
}
.name{
  width: 50%;
  text-align: left;
  padding-left: 20rpx
}
.grade{
  width: 20%;

}

@media (prefers-color-scheme: dark) {
  .button{
    width:50%;
    color: #1b1b1b;
    background: #cccccc;
  }
  .selectbutton{
    background: #1b1b1b;
    color: #cccccc;
  }
  .body{
    width: 90%;
    min-height: 800rpx;
    margin:0 auto 100rpx;
    text-align: center;
    overflow: hidden;
    border-bottom-left-radius: 10rpx;
    border-bottom-right-radius: 10rpx;
    box-shadow: #232323 0 1rpx 1rpx;
  }
  
  .table{
    padding-bottom: 50rpx;
    background: #1b1b1b;
  }
  
  .th{
    font-size: 15px;
    color :#ccc;
    padding: 25rpx 0;
    background: #232323
  }
  .tr:nth-of-type(2n), .tr:nth-of-type(2n+1){
    background:  rgba(182, 178, 178, 0.24);
    display: flex;
    padding: 8rpx;
    border-bottom: 1rpx solid rgba(204, 204, 204, 0.329);
  }
}