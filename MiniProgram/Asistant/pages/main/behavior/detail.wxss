.pick_panel{
  width: 100%;
  height: 300rpx;
  line-height: 100rpx;  
  background: #6173a1;
  text-align: center;
  color: #bdbcbc;
}
.pick{
  height: 100rpx;
}
.mask{
  background: transparent;
}

.show_panel{
  margin: 50rpx auto 20rpx;
}
.tr{
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;  
}
.tr:nth-of-type(1){
  height: 100rpx;
  line-height: 100rpx;
  font-weight: bolder;
}
.tr:nth-of-type(2n+1){
  background: #6173a1;
  color: white;
}
.tr:nth-of-type(2n){
  background: #fff
}
.td{
  width: 20%;
}
.td:nth-of-type(1){
  width: 30%
}
.td:nth-of-type(2){
  width: 30%
}
.tip{
  text-align: center;
  font-size: 26rpx;
  color: #888888;
}